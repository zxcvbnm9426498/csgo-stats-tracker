generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Admin model for admin accounts
model Admin {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  role      String   // "admin" or "moderator"
  createdAt DateTime @default(now())
}

// Account model for user accounts
model Account {
  id        String    @id @default(uuid())
  username  String    @unique
  phone     String    @unique
  steamId   String?
  status    String    // "active", "suspended", or "banned"
  createdAt DateTime  @default(now())
  lastLogin DateTime?
}

// Log model for system logs
model Log {
  id        String   @id @default(uuid())
  userId    String?
  action    String
  details   String
  ip        String?
  timestamp DateTime @default(now())
}
